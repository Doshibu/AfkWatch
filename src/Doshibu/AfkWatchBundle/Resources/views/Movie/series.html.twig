{% extends "DoshibuAfkWatchBundle::layout.html.twig" %}

{% set activeMenu = 'Series' %}

{% block body %}
	<div class="faq">
		<!-- general -->
		<div class="general_agileits_genres">
			<h4 class="latest-text w3_latest_text">Les séries du moment</h4>
			<div class="container">
				<div class="agileits-single-top">
					<ol class="breadcrumb">
						<li><a href="{{ path('doshibu_aw_home') }}">Accueil</a></li>
						<li class="active">TV - Séries</li>
					</ol>
				</div>
			</div>
			<div class="container">
				<div class="bs-example bs-example-tabs" role="tabpanel" data-example-id="togglable-tabs">
					<ul id="myTab" class="nav nav-tabs" role="tablist">
						<li role="presentation" class="active"><a href="#home" id="home-tab" role="tab" data-toggle="tab" aria-controls="home" aria-expanded="true">Les plus regardés</a></li>
						<li role="presentation"><a href="#rating" id="rating-tab" role="tab" data-toggle="tab" aria-controls="rating" aria-expanded="true">Les mieux notées</a></li>
						<li role="presentation"><a href="#imdb" role="tab" id="imdb-tab" data-toggle="tab" aria-controls="imdb" aria-expanded="false">Ajoutées récemment</a></li>
					</ul>
					<div id="myTabContent" class="tab-content">
						<div role="tabpanel" class="tab-pane fade active in" id="home" aria-labelledby="home-tab">
							<div class="w3_agile_featured_movies">
								{% for serie in listPopular %}
									<div class="col-md-2 w3l-movie-gride-agile">
										<a href="{{ path('doshibu_aw_serie', {'slug' : serie.slug}) }}" class="hvr-shutter-out-horizontal">
											<img src="{{ serie.imageSmall.url }}" title="album-name" class="img-responsive" alt="{{ serie.imageSmall.alt }}" style="width:182px; height: 268px;" />
											<div class="w3l-action-icon"><i class="fa fa-play-circle" aria-hidden="true"></i></div>
										</a>
										<div class="mid-1 agileits_w3layouts_mid_1_home">
											<div class="w3l-movie-text">
												<h6><a href="{{ path('doshibu_aw_serie', {'slug' : serie.slug}) }}">{{ serie.name }}</a></h6>							
											</div>
											<div class="mid-2 agile_mid_2_home">
												<p>{{ serie.dateRelease|date('Y') }}</p>
												<div class="block-stars">
													<ul class="w3l-ratings">
														{{ render(controller("DoshibuAfkWatchBundle:UserControl:blockStar", {'rating': serie.rating})) }}
													</ul>
												</div>
												<div class="clearfix"></div>
											</div>
										</div>
										{% if date(serie.addedAt) >= date('-30days') %}
											<div class="ribben">
												<p>NEW</p>
											</div>
										{% endif %}
									</div>
								{% endfor %}
								<div class="clearfix"> </div>
							</div>
						</div>
						
						<div role="tabpanel" class="tab-pane fade" id="rating" aria-labelledby="rating-tab">
							{% for serie in listRated %}
									<div class="col-md-2 w3l-movie-gride-agile">
										<a href="{{ path('doshibu_aw_serie', {'slug' : serie.slug}) }}" class="hvr-shutter-out-horizontal">
											<img src="{{ serie.imageSmall.url }}" title="album-name" class="img-responsive" alt="{{ serie.imageSmall.alt }}" style="width:182px; height: 268px;" />
											<div class="w3l-action-icon"><i class="fa fa-play-circle" aria-hidden="true"></i></div>
										</a>
										<div class="mid-1 agileits_w3layouts_mid_1_home">
											<div class="w3l-movie-text">
												<h6><a href="{{ path('doshibu_aw_serie', {'slug' : serie.slug}) }}">{{ serie.name }}</a></h6>							
											</div>
											<div class="mid-2 agile_mid_2_home">
												<p>{{ serie.dateRelease|date('Y') }}</p>
												<div class="block-stars">
													<ul class="w3l-ratings">
														{{ render(controller("DoshibuAfkWatchBundle:UserControl:blockStar", {'rating': serie.rating})) }}
													</ul>
												</div>
												<div class="clearfix"></div>
											</div>
										</div>
										{% if date(serie.addedAt) >= date('-30days') %}
											<div class="ribben">
												<p>NEW</p>
											</div>
										{% endif %}
									</div>
								{% endfor %}
							<div class="clearfix"> </div>
						</div>
						<div role="tabpanel" class="tab-pane fade" id="imdb" aria-labelledby="imdb-tab">
							{% for serie in listRecent %}
								<div class="col-md-2 w3l-movie-gride-agile">
									<a href="{{ path('doshibu_aw_serie', {'slug' : serie.slug}) }}" class="hvr-shutter-out-horizontal">
										<img src="{{ serie.imageSmall.url }}" title="album-name" class="img-responsive" alt="{{ serie.imageSmall.alt }}" style="width:182px; height: 268px;" />
										<div class="w3l-action-icon"><i class="fa fa-play-circle" aria-hidden="true"></i></div>
									</a>
									<div class="mid-1 agileits_w3layouts_mid_1_home">
										<div class="w3l-movie-text">
											<h6><a href="{{ path('doshibu_aw_serie', {'slug' : serie.slug}) }}">{{ serie.name }}</a></h6>							
										</div>
										<div class="mid-2 agile_mid_2_home">
											<p>{{ serie.dateRelease|date('Y') }}</p>
											<div class="block-stars">
												<ul class="w3l-ratings">
													{{ render(controller("DoshibuAfkWatchBundle:UserControl:blockStar", {'rating': serie.rating})) }}
												</ul>
											</div>
											<div class="clearfix"></div>
										</div>
									</div>
									{% if date(serie.addedAt) >= date('-30days') %}
										<div class="ribben">
											<p>NEW</p>
										</div>
									{% endif %}
								</div>
							{% endfor %}
							<div class="clearfix"> </div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!--body wrapper start-->
		<div class="review-slider">
			<h4 class="latest-text">Ne manquez pas ...</h4>
			<div class="container">
				<div class="w3_agile_banner_bottom_grid">
					<div id="owl-demo" class="owl-carousel owl-theme">
